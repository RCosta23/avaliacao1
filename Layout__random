package avaliacao1;
import avaliacao1.Main;
import java.util.Random;

public class Layout_random
{
	public static void matrizgerada(int n, int m, String[][]campo)
	{
		Random rand= new Random();
		boolean barco1=false;
		boolean barco2=false;
		boolean barco4=false;
		
		for(int i=0;i<1;i++)
		{
			int randomn= rand.nextInt(n);
			int randomm= rand.nextInt(m);
			campo[randomn][randomm]="S";
			
			
			if (!(campo[randomn-1][randomm]).equals("S") && !(campo[randomn+1][randomm]).equals("S") && !(campo[randomn][randomm-1]).equals("S") && !(campo[randomn][randomm+1]).equals("S"))
			{
				barco1=true;
				int barco1n=randomn;
				int barco1m=randomm;
			}
			System.out.println(barco1);
			// criar arrays de barcos
				
		}
	}
}
